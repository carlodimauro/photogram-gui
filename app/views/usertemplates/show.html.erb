<h1><%=@currentuser.username%></h1>

<dl>
  <dt>ID</dt>
    <dd><%= @currentuser.id %></dd>

  <dt>Edit User</dt>
    <dd>
    <form action="/update_user/<%= @currentuser.id %>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="query_username" value="<%= @currentuser.username %>">

      <button>Update user</button>
    </form>
  </dd>

</dl>

<h2>Own photos (<%= @currentuser.own_photos.count%>)</h2>

<table border="1px">
<tr>
<th>Image</th>
<th>Owner</th>
<th>Caption</th>
<th>Posted</th>
<th></th>		
</tr>

<% @currentuser.own_photos.each do |a_photo| %>
<tr>
  <td><img src="<%= a_photo.image %>"></td>
  <td><%= a_photo.poster.username %></td>
  <td><%= a_photo.caption %></td>
  <td><%= a_photo.created_at %></td>
  <td><a href="/photos/<%= a_photo.id %>">Show Details</a></td>		
</tr>

<% end %>
</table>
